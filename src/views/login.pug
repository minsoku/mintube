extend base


block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="username", type="username", placeholder="username", autocomplete="off" required)
    input(name="password", type="password", placeholder="password", autocomplete="off" required)
    input(type="submit", value="Login")
  hr
  div
    span Don't have an account? 
    a(href="/join") Create one now &rarr;