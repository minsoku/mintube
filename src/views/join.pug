extend base


block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="email", type="email", placeholder="email", autocomplete="off" required)
    input(name="username", type="text", placeholder="username", autocomplete="off" required)
    input(name="password", type="password", placeholder="password1", autocomplete="off" required)
    input(name="password2", type="password", placeholder="password2", autocomplete="off" required)
    input(name="name", type="text", placeholder="name", autocomplete="off" required)
    input(name="location", type="text", placeholder="location", autocomplete="off" required)
    input(type="submit", value="Join")
  hr
  div
    span Already have an account? 
    a(href="/login") Login now &rarr;