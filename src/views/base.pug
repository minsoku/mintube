html(lang="ko")
  head
    title #{pageTitle} | #{siteName}
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header
      h1=pageTitle
      nav
        ul
          li
            a(href="/videos/upload") Upload Video
          li
            a(href="/") Home
          if loggedIn
            li 
              a(href="/logout") Log out
            li
              a(href="/my-profule") #{loggedInUser.name} no profile
          else
            li 
              a(href="/join") Join
            li 
              a(href="/login") Login
          li
            a(href="/search") Search
    block content
  include partials/footer.pug 